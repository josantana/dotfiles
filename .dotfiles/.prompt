## PROMPT
# Inspired by @gf3’s Sexy Bash Prompt
# (from https://github.com/gf3/dotfiles)

if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
    export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
    export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
    tput sgr0
    if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
        MAGENTA=$(tput setaf 9)
        ORANGE=$(tput setaf 172)
        GREEN=$(tput setaf 190)
        PURPLE=$(tput setaf 141)
        WHITE=$(tput setaf 256)
    else
        MAGENTA=$(tput setaf 5)
        ORANGE=$(tput setaf 4)
        GREEN=$(tput setaf 2)
        PURPLE=$(tput setaf 1)
        WHITE=$(tput setaf 7)
    fi
    BOLD=$(tput bold)
    RESET=$(tput sgr0)
else
    MAGENTA="\033[1;31m"
    ORANGE="\033[1;33m"
    GREEN="\033[1;32m"
    PURPLE="\033[1;35m"
    WHITE="\033[1;37m"
    BOLD=""
    RESET="\033[m"
fi

function git_info ()
{
    master=$(echo -e "\xEE\x82\xA0")
    # pull=$(echo -e "\xE2\x86\x93")
    # push=$(echo -e "\xE2\x86\x91")
    dirty="D"

    # check if we're in a git repo
    git rev-parse --is-inside-work-tree &>/dev/null || return

    # quickest check for what branch we're on
    branch=$(git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||')

    # check if it's dirty (via github.com/sindresorhus/pure)
    getpull=$(git rev-list --right-only --count HEAD...origin/master)
    getpush=$(git rev-list --left-only  --count HEAD...origin/master)

    dirty=$(git diff --quiet --ignore-submodules HEAD &>/dev/null; [ $? -eq 1 ]&& echo -e "※")
    pull=$([ $getpull -gt 0 ]&& echo -e "⇣")
    push=$([ $getpush -gt 0 ]&& echo -e "⇡")

    echo $WHITE" on "$PURPLE$master $branch $dirty $pull$push
}

# http://www.endmemo.com/unicode/unicodeconverter.php
# Drag icon to "Unicode Character" and use "UTF-8 Code"

# Change symbol to something cooler.
symbol="★ "

# Set default values for Username and Machine
prompt_username=$([ "$custom_username" != "" ] && echo "$custom_username" || echo "$USER")
prompt_machine=$([ "$custom_machine" != "" ] && echo "$custom_machine" || echo "$HOSTNAME")

# Only show username/host if not default
function usernamehost ()
{
    echo "${MAGENTA}$prompt_username ${WHITE}@ ${ORANGE}$prompt_machine ${WHITE}in "
}

# iTerm Tab and Title Customization and prompt customization
# http://sage.ucsc.edu/xtal/iterm_tab_customization.html

# Put the string " [bash]   hostname::/full/directory/path"
# in the title bar using the command sequence
# \[\e]2;[bash]   \h::\]$PWD\[\a\]

# Put the penultimate and current directory
# in the iterm tab
# \[\e]1;\]$(basename $(dirname $PWD))/\W\[\a\]

PS1="\[\e]2;$PWD\[\a\]\[\e]1;\]$(basename "$(dirname "$PWD")")/\W\[\a\]${BOLD}\$(usernamehost)\[$GREEN\]\w\$(git_info)\[$WHITE\]\n$symbol \[$RESET\]"
